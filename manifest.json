{
  "manifest_version": 2,

  "name": "FlashDict",
  "description": "This extension finds meaning of the selected word",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "FlashDict"
  },

  "commands": {
    "find" : {
        "suggested_key": {
             "default": "Ctrl+Q" 
        },
        "description": "Find the meaning"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}